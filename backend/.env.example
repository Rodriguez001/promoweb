# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://promoweb:password_2024@localhost:5432/promoweb
DB_HOST=localhost
DB_PORT=5432
DB_USER=promoweb
DB_PASSWORD=password_2024
DB_NAME=promoweb

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
SECRET_KEY=promoweb-super-secret-key-change-in-production-2024
DEBUG=True
API_VERSION=v1
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=7200  # 2 hours in seconds
JWT_REFRESH_EXPIRATION_TIME=604800  # 7 days in seconds

# Password Security
BCRYPT_ROUNDS=12

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600  # 1 hour

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_EXTENSIONS=["jpg", "jpeg", "png", "gif", "webp", "pdf", "doc", "docx"]

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@promoweb.cm
FROM_NAME=PromoWeb Africa

# =============================================================================
