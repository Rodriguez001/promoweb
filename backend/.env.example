# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=promoweb_africa

# JWT Configuration
JWT_SECRET=promoweb-africa-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Mobile Money Configuration
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/cm/v1
ORANGE_MONEY_MERCHANT_KEY=your-orange-money-key
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key

# Currency Conversion
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/EUR
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Shipping Configuration
DEFAULT_SHIPPING_COST=2000
WEIGHT_RATE_PER_KG=500

# Admin Configuration
ADMIN_EMAIL=admin@promoweb-africa.com
ADMIN_PASSWORD=change-this-password

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
