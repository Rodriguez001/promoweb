GOOGLE_API_KEY=your-google-api-key

# Shipping APIs
AFTERSHIP_API_KEY=your-aftership-api-key
SENDCLOUD_API_KEY=your-sendcloud-api-key

# =============================================================================
# SMS & NOTIFICATIONS
# =============================================================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking Configuration
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Pricing & Shipping
DEFAULT_DEPOSIT_PERCENTAGE=30
DEFAULT_MARGIN_PERCENTAGE=35
DEFAULT_SHIPPING_COST=2000  # XAF
WEIGHT_RATE_PER_KG=500  # XAF per kg
FREE_SHIPPING_THRESHOLD=50000  # XAF

# Currency
BASE_CURRENCY=EUR
TARGET_CURRENCY=XAF
